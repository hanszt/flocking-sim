<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxWidth="300.0" prefHeight="744.0" prefWidth="536.0" spacing="4.0"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hzt.controller.sub_pane.AppearanceController">
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
    </padding>
    <Label text="Choose theme"/>
    <ComboBox fx:id="themeCombobox" prefWidth="300.0" promptText="Themes"/>
    <Label text="Choose background"/>
    <ComboBox fx:id="backgroundCombobox" onAction="#backgroundComboBoxAction"
              prefWidth="300.0" promptText="Backgrounds"/>

    <Label text="Choose display settings"/>
    <HBox prefWidth="1000.0">
        <VBox prefWidth="150.0" spacing="4.0">
            <padding>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
            </padding>
            <ToggleButton fx:id="opacityStageButton" mnemonicParsing="false"
                          prefWidth="1000.0" text="Transparent"/>
        </VBox>
        <VBox prefWidth="150.0" spacing="4.0">
            <padding>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
            </padding>
            <ToggleButton fx:id="fullScreenButton" mnemonicParsing="false" prefWidth="1000.0"
                          text="Full screen"/>
        </VBox>
    </HBox>

    <Label text="Choose colors"/>
    <HBox prefWidth="1000.0">
        <VBox prefWidth="150.0" spacing="4.0">
            <padding>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
            </padding>
            <Label text="Background color"/>
            <ColorPicker fx:id="backgroundColorPicker"
                         onAction="#backgroundColorPickerAction" prefHeight="30"
                         prefWidth="1000.0"/>
        </VBox>
    </HBox>
</VBox>


